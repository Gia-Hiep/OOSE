package com.app.service;

import com.app.dto.Customer;

import java.util.List;

public class SearchResult {

    private final String loginUserName;

    private final String customerName;
    private final String sex;
    private final String birthdayFrom;
    private final String birthdayTo;

    private final List<Customer> rows;

    private final int total;
    private final int page;
    private final int lastPage;

    public SearchResult(
            String loginUserName,
            String customerName,
            String sex,
            String birthdayFrom,
            String birthdayTo,
            List<Customer> rows,
            int total,
            int page,
            int lastPage
    ) {
        this.loginUserName = loginUserName;
        this.customerName = customerName;
        this.sex = sex;
        this.birthdayFrom = birthdayFrom;
        this.birthdayTo = birthdayTo;
        this.rows = rows;
        this.total = total;
        this.page = page;
        this.lastPage = lastPage;
    }

    public String getLoginUserName() { return loginUserName; }

    public String getCustomerName() { return customerName; }
    public String getSex() { return sex; }
    public String getBirthdayFrom() { return birthdayFrom; }
    public String getBirthdayTo() { return birthdayTo; }

    public List<Customer> getRows() { return rows; }

    public int getTotal() { return total; }
    public int getPage() { return page; }
    public int getLastPage() { return lastPage; }
}
